@model FinanceLogs.Models.FinancialSummary

@{
    ViewData["Title"] = "Home Page";
}

<h2>Financial Summary</h2>

@if (Model != null)
{
    <div class="row">
        <div class="card border-info mb-4" style="max-width: 18rem;">
            <div class="card-header"><h4> BALANCE </h4></div>
                <div class="card-body">
                <p class="card-text">@Model.Balance</p>

                </div>
           
        </div>
        <div class="card border-info mb-4" style="max-width: 18rem;">
            <div class="card-header"><h4> INCOME </h4></div>
            <div class="card-body">
                <p class="card-text">@Model.TotalIncome</p>

            </div>

        </div>
        <div class="card border-info mb-4" style="max-width: 18rem;">
            <div class="card-header"><h4> Expenses </h4></div>
            <div class="card-body">
                <p class="card-text">@Model.TotalExpenses</p>

            </div>
        </div>
    </div>

}
else
{
    <p> No financial summary available. </p>
    <p> An error has Occured.</p>
    <p>Model FinancialSummary Failed to be passed</p>
}
